---
import List from '../List/index.astro'

export interface Props {
  title: string;
}

const { title } = Astro.props
---

<section class="container">
  <h2 class="title">{title}</h2>
  <List>
    <slot />
  </List>
</section>

<style lang="scss">
  .container {
    display: grid;
    grid-template-columns: 40% 60%;

    @media (max-width: 768px) {
      grid-template-columns: 1fr;
    }
  }

  .title {
    font-style: normal;
    font-weight: normal;
    font-size: 18px;
    line-height: 22px;
    color: #636363;
    margin: 0px;

    @media (max-width: 768px) {
      margin-bottom: 8px;
    }

    @media (prefers-color-scheme: dark) {
      color: #c4c4c4;
    }
  }
</style>
